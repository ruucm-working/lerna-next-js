  },
  "devDependencies": {
    "@types/node": "17.0.23",
    "@types/react": "18.0.0",
    "@types/react-dom": "18.0.0",
    "eslint": "8.13.0",
    "eslint-config-next": "12.1.4",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "4.6.3"
  }
}
